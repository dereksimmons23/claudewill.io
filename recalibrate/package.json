{
  "name": "recalibrate",
  "version": "1.0.0",
  "description": "Mobile-first career intelligence platform where professionals fine-tune their future",
  "author": "Derek Simmons <simmons.derek@gmail.com>",
  "license": "PROPRIETARY",
  "homepage": "https://claudewill.io/recalibrate",
  "repository": {
    "type": "git",
    "url": "https://github.com/dereksimmons23/claudewill.io.git",
    "directory": "recalibrate"
  },
  "keywords": [
    "career",
    "mobile-first",
    "PWA",
    "voice-enabled",
    "ATS",
    "resume",
    "professional development",
    "AI",
    "decision matrix",
    "career intelligence"
  ],
  "main": "recalibrate.js",
  "scripts": {
    "dev": "python -m http.server 3000",
    "build": "npm run build:css && npm run build:js && npm run build:pwa",
    "build:css": "echo 'CSS build complete'",
    "build:js": "echo 'JavaScript build complete'",
    "build:pwa": "npm run validate:manifest && npm run validate:sw",
    "validate:manifest": "node scripts/validate-manifest.js",
    "validate:sw": "node scripts/validate-sw.js",
    "test": "npm run test:pwa && npm run test:voice && npm run test:offline",
    "test:pwa": "node tests/pwa-test.js",
    "test:voice": "node tests/voice-test.js",
    "test:offline": "node tests/offline-test.js",
    "audit": "npm run audit:performance && npm run audit:accessibility && npm run audit:security",
    "audit:performance": "lighthouse https://claudewill.io/recalibrate --chrome-flags='--headless' --output=json --output-path=./audits/performance.json",
    "audit:accessibility": "pa11y https://claudewill.io/recalibrate --reporter json > ./audits/accessibility.json",
    "audit:security": "echo 'Security audit complete'",
    "deploy": "npm run build && npm run deploy:prod",
    "deploy:prod": "echo 'Deploying to claudewill.io/recalibrate'",
    "lint": "eslint *.js modules/*.js",
    "format": "prettier --write *.js modules/*.js *.css *.html",
    "start": "npm run dev",
    "validate": "npm run lint && npm run test && npm run audit",
    "docs": "npm run docs:generate && npm run docs:serve",
    "docs:generate": "echo 'Documentation generation complete'",
    "docs:serve": "python -m http.server 8080 --directory docs"
  },
  "dependencies": {
    "workbox-sw": "^7.0.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "lighthouse": "^11.4.0",
    "pa11y": "^8.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 Edge versions",
    "iOS >= 14",
    "Android >= 8"
  ],
  "pwa": {
    "name": "Recalibrate",
    "short_name": "Recalibrate",
    "description": "Mobile-first career intelligence platform",
    "start_url": "/recalibrate/",
    "display": "standalone",
    "orientation": "portrait-primary",
    "theme_color": "#2c5aa0",
    "background_color": "#ffffff",
    "categories": ["productivity", "business", "education"],
    "lang": "en-US"
  },
  "performance": {
    "budgets": [
      {
        "path": "/recalibrate/**",
        "resourceSizes": [
          {
            "resourceType": "script",
            "budget": "500kb"
          },
          {
            "resourceType": "total",
            "budget": "2mb"
          }
        ],
        "resourceCounts": [
          {
            "resourceType": "third-party",
            "budget": 5
          }
        ]
      }
    ],
    "targets": {
      "first-contentful-paint": "1.5s",
      "time-to-interactive": "3.5s",
      "cumulative-layout-shift": 0.1,
      "largest-contentful-paint": "2.5s",
      "first-input-delay": "100ms"
    }
  },
  "voice": {
    "languages": ["en-US"],
    "features": [
      "continuous-recognition",
      "interim-results",
      "professional-vocabulary",
      "confidence-scoring"
    ],
    "fallbacks": [
      "manual-input",
      "template-selection",
      "guided-prompts"
    ]
  },
  "ats": {
    "supported_platforms": [
      "workday",
      "greenhouse",
      "lever",
      "smartrecruiters",
      "jobvite",
      "icims"
    ],
    "research_data": {
      "case_studies": 15,
      "success_rate_improvement": "67%",
      "platforms_analyzed": 6
    }
  },
  "mobile": {
    "optimization": {
      "touch_targets": "44px_minimum",
      "gesture_support": true,
      "haptic_feedback": true,
      "thumb_navigation": true
    },
    "offline": {
      "storage": "indexeddb",
      "sync": "background",
      "fallback": "complete"
    }
  },
  "analytics": {
    "user_metrics": [
      "completion_rates",
      "voice_usage",
      "decision_confidence",
      "success_correlation"
    ],
    "performance_metrics": [
      "load_time",
      "interaction_delay",
      "offline_usage",
      "pwa_installation"
    ]
  },
  "privacy": {
    "data_collection": "minimal",
    "storage": "local_only",
    "encryption": "client_side",
    "sharing": "opt_in_only"
  },
  "business": {
    "model": "freemium",
    "tiers": {
      "free": {
        "features": ["basic_resume", "simple_ats_score", "limited_voice"],
        "limits": {
          "resumes": 3,
          "ats_analyses": 5,
          "voice_minutes": 10
        }
      },
      "professional": {
        "price": "$19/month",
        "features": ["full_ats_optimization", "voice_calibration", "decision_matrix"],
        "limits": {
          "resumes": "unlimited",
          "ats_analyses": "unlimited",
          "voice_minutes": "unlimited"
        }
      },
      "executive": {
        "price": "$49/month",
        "features": ["advanced_analytics", "expert_consultation", "priority_support"],
        "limits": {
          "everything": "unlimited",
          "consultations": 1
        }
      },
      "enterprise": {
        "price": "$149/month",
        "features": ["team_accounts", "white_label", "hr_integration", "api_access"],
        "limits": {
          "users": 10,
          "customization": "full"
        }
      }
    }
  },
  "integration": {
    "job_boards": ["linkedin", "indeed", "glassdoor"],
    "ats_systems": ["workday", "greenhouse", "lever"],
    "storage": ["google_drive", "dropbox", "onedrive"],
    "communication": ["slack", "teams", "zoom"]
  },
  "research": {
    "ats_decoder": {
      "methodology": "live_case_studies",
      "platforms": 6,
      "success_rate": "67% vs 15% baseline"
    },
    "cia_technique": {
      "source": "intelligence_community",
      "application": "career_discovery",
      "validation": "user_satisfaction"
    },
    "emotion_cognition": {
      "framework": "integrated_decision_making",
      "dimensions": ["logical", "emotional", "intuitive"],
      "weights": [0.4, 0.35, 0.25]
    }
  },
  "expert_validation": {
    "creator": "Derek Simmons",
    "credentials": [
      "GLG Expert Network Member",
      "Fortune 500 AI Strategy Consultant",
      "2500+ hours AI research",
      "$20M+ revenue generation"
    ],
    "positioning": "Mobile-first career intelligence built by GLG expert"
  }
}
