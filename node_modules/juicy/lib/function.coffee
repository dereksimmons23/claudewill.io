Function::merge = (fn) ->
	for method of fn
		@[method] = fn[method] if fn.hasOwnProperty method
	
	for method of fn::
		@::[method] = fn::[method] if fn::hasOwnProperty method
	
	@

Function::include = (fn) ->
	if fn.ClassMethods
		Object.keys(fn.ClassMethods::).forEach (methodName) =>
			@[methodName] = -> fn.ClassMethods::[methodName].apply @, arguments

	if fn.InstanceMethods
		Object.keys(fn.InstanceMethods::).forEach (methodName) =>
			@::[methodName] = fn.InstanceMethods::[methodName]

	@