String::__defineGetter__ 'basename', ->
	@replace /^.*[\/\\]/g, ''

String::__defineGetter__ 'extension', ->
    parts = @replace(/^.*[\/\\]/g, '').split '.'
    parts[1..(parts.length - 1)].join '.'

if not String::trim
	String::trim = ->
		@replace(/^\s\s*/, '').replace(/\s\s*$/, '')

String::__defineGetter__ 'trimmed', ->
	@trim()

