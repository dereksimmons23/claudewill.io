    <script>
        // Theme toggle functionality and tab navigation
        document.addEventListener('DOMContentLoaded', () => {
            const themeToggle = document.getElementById('theme-toggle');
            const themeIcon = themeToggle.querySelector('.theme-toggle-icon');
            try {
                const storedTheme = localStorage.getItem('theme');
                if (storedTheme === 'dark') {
                    document.body.classList.add('dark-theme');
                    themeIcon.textContent = 'light_mode';
                }
            } catch (error) {
                console.log('Unable to access localStorage. Using default theme.');
            }
            themeToggle.addEventListener('click', () => {
                document.body.classList.toggle('dark-theme');
                if (document.body.classList.contains('dark-theme')) {
                    themeIcon.textContent = 'light_mode';
                    try {
                        localStorage.setItem('theme', 'dark');
                    } catch (error) {
                        console.log('Unable to access localStorage.');
                    }
                } else {
                    themeIcon.textContent = 'dark_mode';
                    try {
                        localStorage.setItem('theme', 'light');
                    } catch (error) {
                        console.log('Unable to access localStorage.');
                    }
                }
            });
            // Tab functionality
            const tabButtons = document.querySelectorAll('.tab-button');
            const tabContents = document.querySelectorAll('.tab-content');
            tabButtons.forEach((button, idx) => {
                button.addEventListener('click', () => {
                    tabButtons.forEach(b => {
                        b.classList.remove('active');
                        b.setAttribute('aria-selected', 'false');
                        b.setAttribute('tabindex', '-1');
                    });
                    tabContents.forEach(c => c.classList.remove('active'));
                    button.classList.add('active');
                    button.setAttribute('aria-selected', 'true');
                    button.setAttribute('tabindex', '0');
                    button.focus();
                    const tabId = button.getAttribute('data-tab');
                    document.getElementById(`${tabId}-tab`).classList.add('active');
                });
                button.addEventListener('keydown', (e) => {
                    let newIdx = null;
                    if (e.key === 'ArrowRight' || e.key === 'ArrowDown') {
                        newIdx = (idx + 1) % tabButtons.length;
                    } else if (e.key === 'ArrowLeft' || e.key === 'ArrowUp') {
                        newIdx = (idx - 1 + tabButtons.length) % tabButtons.length;
                    }
                    if (newIdx !== null) {
                        e.preventDefault();
                        tabButtons[newIdx].click();
                    }
                });
            });
            document.body.classList.add('js-enabled');
        });
    </script>
